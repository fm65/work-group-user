pipeline{
agent any

    stages {
        stage('Checkout') {
            steps {
                    git branch: 'master', url: 'https://github.com/fm65/work-group-user.git'
            }
        }

        stage('Create a virtualenv and activate it') {
            steps {
                sh 'python3 -m venv env'
                sh 'chmod +x env/bin/activate'
                sh './env/bin/activate'
            }
        }
        
        stage('Install requirements and set environments') {
            steps {
                sh 'pip install -r requirements.txt'
                sh 'chmod +x .env'
                sh './env'
            }
        }

        stage('All test') {
            steps {
                sh 'python manage.py test'
            }
        }
    }
}
